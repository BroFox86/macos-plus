mixin page-nav

  - var n = 0

  mixin page-nav-inner
    h2.aside__headline= "Оглавление"
    ul.page-nav__list
      each item in itemList
        li.page-nav__item
          a.page-nav__link(href="#" + n)
            span.page-nav__text= itemList[n]
            span.page-nav__number= n + 1

            - n++

  case isMobile
    when false
      nav.sidebar__item.aside.page-nav
        +page-nav-inner
    when true
      nav.page__nav.aside.page-nav
        +page-nav-inner
        