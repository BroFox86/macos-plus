mixin page-nav(...items)

  - var n = 1

  mixin page-nav-inner
    h2.aside__headline= "Оглавление"
    ul.page-nav__list
      each item in items
        li.page-nav__item
          a.page-nav__link(href="#" + n)
            span.page-nav__text= item
            span.page-nav__number= n++
  case mobile
    when false
      nav.sidebar__item.aside.page-nav
        +page-nav-inner
    when true
      nav.page__nav.aside.page-nav
        +page-nav-inner
        