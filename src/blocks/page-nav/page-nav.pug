mixin pageNav

  - var i = 0

  mixin pageNavInner
    h2.aside__headline.page-nav__headline= "Оглавление"
    ul.page-nav__list
      each item in itemList
        li.page-nav__item
          a.page-nav__link(href="#" + (i+1))!= itemList[i++] + " "
            +svg("page-nav__icon", "link")

  case isMobile
    when false
      nav.aside.page-nav.sidebar__item.js-scrollspy
        +pageNavInner
    when true
      nav.aside.page-nav.article__page-nav
        +pageNavInner
        